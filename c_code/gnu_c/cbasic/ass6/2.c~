void str_rev( char *str)
{
 
 int i;
int count=0; 
 char str1[10];
 //str1= (char *)malloc( 100*sizeof(char));
 while(str[count++] != '\0');
i=0;       
while(--count==0)
 {
  str1[i] = str[count];
 i++;
 }
str1[i]='\0' ;
printf("%s", &str1[0]);
// return str1;

}
